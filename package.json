{
    "name": "ms-node-api-gw",
    "version": "1.0.0",
    "description": "Enterprise-grade Microservices API Gateway with hot-reload, circuit breakers, rate limiting, and plugin support",
    "main": "server.js",
    "engines": {
        "node": ">=18.0.0"
    },
    "scripts": {
        "start": "node server.js",
        "dev": "NODE_ENV=development node server.js",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:ci": "jest --ci --coverage --reporters=default --reporters=jest-junit",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "validate": "npm run lint && npm run format:check && npm test",
        "docker:build": "docker build -t ms-node-api-gw .",
        "docker:run": "docker run -p 3000:3000 --env-file .env ms-node-api-gw",
        "prepare": "husky || true"
    },
    "keywords": [
        "api-gateway",
        "microservices",
        "proxy",
        "express",
        "circuit-breaker",
        "rate-limiting",
        "hot-reload",
        "enterprise"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "axios": "^1.6.0",
        "chokidar": "^3.5.3",
        "compression": "^1.8.1",
        "cors": "^2.8.6",
        "express": "^4.18.2",
        "express-rate-limit": "^8.2.1",
        "express-validator": "^7.3.1",
        "helmet": "^8.1.0",
        "http-proxy-middleware": "^2.0.6",
        "js-yaml": "^4.1.0",
        "opossum": "^9.0.0",
        "prom-client": "^15.1.3",
        "winston": "^3.19.0",
        "winston-daily-rotate-file": "^5.0.0"
    },
    "optionalDependencies": {
        "ioredis": "^5.3.2",
        "rate-limit-redis": "^4.2.0"
    },
    "devDependencies": {
        "eslint": "^8.57.0",
        "husky": "^9.1.7",
        "jest": "^30.2.0",
        "lint-staged": "^15.5.2",
        "prettier": "^3.8.1",
        "supertest": "^7.2.2"
    },
    "lint-staged": {
        "*.js": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{json,yaml,yml,md}": [
            "prettier --write"
        ]
    }
}
